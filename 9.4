name = input("Enter file:")
if len(name) < 1 : name = "mbox-short.txt"
handle = open(name)
file=open(name)
dictionary=dict()

for line in file:
    if line.startswith("From "):
        splitline=line.split()
        dictionary[splitline[1]]=dictionary.get(splitline[1],0)+1

bigcount= None
bigsender=None
for dictionary, count in dictionary.items():
        if bigcount is None or count> bigcount:
            bigsender= dictionary
